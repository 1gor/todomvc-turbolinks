<section id="todoapp">
  <header id="header">
    <h1>todos</h1>
    <%= form_for Todo.new do |f| %>
      <%= f.text_field :title, id: "new-todo", placeholder: "What needs to be done?", autofocus: true %>
    <% end %>
  </header>
  <% if Todo.any? %>
    <section id="main">
      <input id="toggle-all" type="checkbox">
      <label for="toggle-all">Mark all as complete</label>
      <ul id="todo-list">
        <% @todos.each do |todo| %>
          <li>
            <div class="view">
              <%= form_for todo do |f| %>
                <%= f.check_box :is_completed, class: "toggle", "data-behavior": "submit_on_check" %>
              <% end %>
              <label><%= todo.title %></label>
              <button class="destroy"></button>
            </div>
            <input class="edit" value="example">
          </li>
        <% end %>
      </ul>
    </section>
    <footer id="footer">
      <span id="todo-count"></span>
      <ul id="filters">
        <li>
          <a href="#/" class="selected">All</a>
        </li>
        <li>
          <a href="#/active">Active</a>
        </li>
        <li>
          <a href="#/completed">Completed</a>
        </li>
      </ul>
      <button id="clear-completed">Clear completed</button>
    </footer>
  <% end %>
</section>
<footer id="info">
  <p>Double-click to edit a todo</p>
  <p>Created by <a href="http://twitter.com/nateberkopec">Nate Berkopec</a></p>
  <p>Part of <a href="http://todomvc.com">TodoMVC</a></p>
</footer>
